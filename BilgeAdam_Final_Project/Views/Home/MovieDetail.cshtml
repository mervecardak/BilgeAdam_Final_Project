
@{
    ViewData["Title"] = "MovieDetail";
}
@model GetMovieDetailVM

<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="row">

        <div class="col-lg-12 col-12 text-center">

            <h2 class="mb-0">Detay Sayfası</h2>
        </div>

    </div>
</div>
<section class="latest-podcast-section section-padding pb-0" id="section_2">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-10 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Film Bilgileri</h4>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-12">
                        <div class="custom-block-icon-wrap">
                            <div class="custom-block-image-wrap custom-block-image-detail-page">
                                <img src="~/images/movies/@Model.Image"
                                     class="custom-block-image img-fluid" alt="">
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-9 col-12">
                        <div class="custom-block-info">
                            <div class="custom-block-top d-flex mb-1">
                                <small>Episode, </small>
                                @foreach(var category in Model.Categories)
                                {
                                    <small>@category,</small>
                                }
                            </div>

                            <h2 class="mb-2">@Model.Name</h2>

                            <p>
                               @Model.Description
                            </p>
                          
                            <div class="profile-block profile-detail-block d-flex flex-wrap align-items-center mt-5">
                                <div class="d-flex mb-3 mb-lg-0 mb-md-0">
                                    <p>
                                      @Model.DirectorName
                                        <strong>Yönetmen</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

