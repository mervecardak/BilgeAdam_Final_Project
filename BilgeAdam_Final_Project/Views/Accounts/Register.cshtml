@{
    ViewData["Title"] = "Register";
}

@model RegisterDTO

@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Yeni Kayıt!</h1>
                        </div>
                        <form class="user" asp-action="Register">
                            <div class="form-group">
                                <div class="mb-3 mb-sm-0">
                                    <input asp-for="UserName" type="text" class="form-control form-control-user" id="exampleFirstName"
                                           placeholder="Kullanıcı Adı">
                                </div>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail"
                                       placeholder="Email Adresi">
                            </div>
                            <div class="form-group">
                                <div class="mb-3 mb-sm-0">
                                    <input asp-for="Password" type="password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Şifre">
                                </div>
                            </div>
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Kayıt Ol" />
                            <hr>
                            <a href="index.html" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> Google ile Kayıt
                            </a>
                            <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                <i class="fab fa-facebook-f fa-fw"></i> Facebook ile Kayıt
                            </a>
                        </form>
                        <hr>

                        <div class="text-center">
                            <a asp-action="LogIn" class="small">Zaten bir hesabın var mı? Giriş Yap!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>